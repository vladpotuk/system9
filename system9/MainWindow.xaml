<Window x:Class="system9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System9" Height="450" Width="800">
    <Grid Background="#F0F0F0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <Button Name="StartButton" Content="Start" Click="StartButton_Click" Background="#007ACC" Foreground="White" FontSize="16" Padding="10" Margin="10" BorderBrush="Transparent" BorderThickness="2" />
            <TextBox Name="ModifiedArrayOutput" Height="150" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Background="White" Foreground="#333333" FontSize="14" Padding="10" Margin="10" BorderBrush="#B0B0B0" BorderThickness="1" />
            <TextBox Name="MaxValueOutput" Height="50" IsReadOnly="True" TextWrapping="Wrap" Background="White" Foreground="#333333" FontSize="14" Padding="10" Margin="10" BorderBrush="#B0B0B0" BorderThickness="1" />
        </StackPanel>
    </Grid>
</Window>

