<Window x:Class="system9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System9" Height="450" Width="800">
    <Grid Background="#F0F0F0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="StartButton" Content="Start" Width="150" Height="40" Margin="10" Click="StartButton_Click" Background="#007ACC" Foreground="White" FontSize="16"/>
            <TextBox Name="FirstThreadOutput" Width="300" Height="150" Margin="10" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Background="White" FontSize="14"/>
            <TextBox Name="SecondThreadOutput" Width="300" Height="150" Margin="10" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Background="White" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>

